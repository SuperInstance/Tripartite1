# EditorConfig - https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_size = 4

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.toml]
indent_size = 2

[Makefile]
indent_style = tab

[*.sql]
indent_size = 2
